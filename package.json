    "build-task:scss-compile": "node-sass --source-map false main.scss/ -o dist/css"
  },
  "author": "Stijn de Jong",
  "license": "MIT",
  "devDependencies": {
    "glob": "^7.1.1",
    "node-sass": "^4.5.2",
    "stylelint": "^7.10.1",
    "stylelint-scss": "^1.4.3"
  },
  "dependencies": {
    "sass-mq": "^3.3.2"
  }
}

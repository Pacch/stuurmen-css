{
  "name": "stuurmen-css",
  "version": "0.2.0",
  "description": "Stuurmen CSS Front-end framework",
  "main": "main.scss",
  "repository": "https://github.com/stuurmen/stuurmen-css",
  "scripts": {
    "test": "npm run lint && npm run scss",
    "lint": "./node_modules/.bin/stylelint \"**/*.scss\" --syntax scss",
